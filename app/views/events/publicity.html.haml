.twelve.columns.centered
  .alert-box.secondary
    %center 
      *Optional: Get started by copying over another of your publicity emails! 
      = collection_select(:publicity_email, :id, @publicity_emails, :id, :describe, {:prompt => "Select Email..."}, {:style => "width: 120px;margin-left: 10px"})

.eleven.columns.centered
  %center 
    %h2 Publicity Email
    %h3.subtitle Write a publicity email to publicize your event

  = simple_form_for [@event, @event.publicity_emails.new], :html => {:class => 'publicity_email_form', :id => @event.id.to_s} do |f|
    = f.error_notification
    .twelve.columns
      .three.columns
        = f.label :subject, :class => "inline right"
      .six.columns
        = f.text_field :subject
      .three.columns
    .twelve.columns
      .three.columns
        = f.label :content, "Message", :class => "inline right"
      .six.columns
        = f.text_area :content, :class => "redactor"
      .three.columns
    .twelve.columns
      .three.columns
      .six.columns
        = f.submit 'Send Email To My Group', :class => "small button right", :style => "margin-top: 15px;"
      .three.columns

