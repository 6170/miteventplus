%dl.tabs
   %dd.active
      %a{:href => '#details', :id => 'event_details_tab'} Event Details
   %dd
      %a{:href => '#date', :id => 'event_date_tab'} Pick a Date
   %dd
      %a{:href => '#time', :id => 'event_time_tab'} Pick a Time
   %dd
      %a{:href => '#finalize', :id => 'event_finalize_tab'} Finalize Event
%ul.tabs-content
   %li.active#detailsTab 
      .row
         .ten.columns.offset-by-two
            %h4 Event Information
      .row
         .nine.columns.offset-by-three
            %form
               .row
                  .two.columns
                     %label.right.inline Title:
                  .ten.columns
                     %input{:type => 'text', :class => 'eight event_input_field', :id => 'title'}
               .row
                  .two.columns
                     %label.right.inline Location:
                  .ten.columns
                     %input{:type => 'text', :class => 'eight event_input_field', :id => 'location'}
               .row
                  .two.columns
                     %label.right.inline Description:
                  .ten.columns
                     %textarea{:class => 'event_input_field', :id => 'description'}
   %li#dateTab
      #event_calendar
   %li#timeTab
      #agenda_calendar
   %li#finalizeTab
      .row
         .ten.columns.offset-by-two
            %h4 Event Summary
      .row
         .nine.columns.offset-by-three
            %form{:name => 'event_form', :method => 'POST', :action => '/events'}
               .row
                  .two.columns
                     %label.right.inline Title:
                  .ten.columns
                     %input{:type => 'text', :class => 'eight', :readonly => 'readonly', :name => 'title', :id => 'title_s'}
               .row
                  .two.columns
                     %label.right.inline Location:
                  .ten.columns
                     %input{:type => 'text', :class => 'eight', :readonly => 'readonly', :name => 'location', :id => 'location_s'}
               .row
                  .two.columns
                     %label.right.inline Description:
                  .ten.columns
                     %textarea{:readonly => 'readonly', :class => 'eight', :name => 'description', :id => 'description_s'}
               .row
                  .two.columns
                     %label.right.inline Start Date:
                  .ten.columns
                     .row
                        .six.columns
                           %input{:type => 'text', :readonly => 'readonly', :name => 'start_date', :id => 'start_date_s'}
                        .six.columns
                           %input{:type => 'text', :readonly => 'readonly', :name => 'start_time', :id => 'start_time_s'}
               .row
                  .two.columns
                     %label.right.inline End Date:
                  .ten.columns
                     .row
                        .six.columns
                           %input{:type => 'text', :readonly => 'readonly', :name => 'end_date', :id => 'end_date_s'}
                        .six.columns
                           %input{:type => 'text', :readonly => 'readonly', :name => 'end_time', :id => 'end_time_s'}
               .row
                  .three.columns.offset-by-nine
                     %input{:type => 'submit', :value => 'Create Event'}
%br
.row
   .two.columns
      %a << Back
   .two.columns.offset-by-eight
      %a Next >>

